@import url('https://rsms.me/inter/inter-ui.css')

*
  margin 0
  padding 0

html
  font-family 'Inter UI', 'Helvetica Neue', sans-serif
  font-weight 200
  font-size 16px
  height 100vh

body

.logo
  font-weight 100
  height 75vh
  display flex
  flex-direction column
  justify-content center
  align-items center

.me
  font-size 10vw
  letter-spacing 3vw
  color white
  position relative

.mask
  position absolute
  width 100vw
  top 0

.content
  color #444
  font-weight 200

p + p
  margin-top 3rem

p
  display flex
  align-items center
  justify-content center

a
  color inherit
  text-decoration none
  display inline-flex
  align-items center

a + a
  padding-left 2rem

svg
  width 32px
  height 32px
  fill #444
