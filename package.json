  },
  "homepage": "https://github.com/madbence/danyi.me",
  "devDependencies": {
    "browserify": "^5.9.3",
    "es6ify": "^1.3.0",
    "jade": "^1.5.0",
    "stylus": "^0.47.3",
    "uglify-js": "^2.4.15",
    "watchify": "^1.0.2"
  },
  "dependencies": {
    "koa": "^0.9.0",
    "koa-static": "^1.4.6"
  }
